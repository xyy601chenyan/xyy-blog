<div class="search-bar">
  <%= form_tag find_admin_articles_path, method: :get, class: "articles-search-form" do %>
  <div class="input-group">
    <input type="text" class="form-control" name="s" value="<%= params[:s] %>" placeholder="搜索文章">
    <span class="input-group-btn">
      <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </span>
  </div>
  <% end %>
</div>
