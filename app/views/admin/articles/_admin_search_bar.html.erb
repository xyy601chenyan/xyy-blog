<div class="search-bar">
  <%= form_tag find_admin_articles_path, method: :get, class: "articles-search-form" do %>
  <div class="input-group">
    <input type="text" class="form-control" id = "search_input2" name="s" value="<%= params[:s] %>" placeholder="搜索文章">
    <span class="input-group-btn">
      <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </span>
  </div>
  <a id="empty_button2" class="btn btn-default">清空</a>
  <% end %>
</div>

<script >
$("#empty_button2").click(function(){
   $("#search_input2").val("");
})

</script>
