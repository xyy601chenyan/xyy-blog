<div class="row">
  <div class="col-md-3">
    <%= form_tag search_articles_path, method: :post, class: "articles-search-form" do %>
    <div class="input-group">
      <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="搜索文章">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-default">
          <span class="glyphicon glyphicon-search"></span>
        </button>
      </span>
    </div>
    <% end %>
  </div>
</div>
